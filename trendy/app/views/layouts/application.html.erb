<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trendy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <div class="admin-bar">
      <div class="buttons">
        <button class="button"><%= link_to "New Post", new_post_path %></button>
        <button class="button"><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></button>
      </div>
    </div>
    <% end %>
    <% flash.each do |name, message| %>
    <%= content_tag(:div, message, class: "alert") %>
    <% end %>
    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag "peace2.svg" %>
      <% end %>
    </div>
    <!-- <%= link_to root_path do %>
    <h1 class="main-logo">Trendy.io</h1>
    <% end %> -->
    <div id="sidebar">
      <ul>
        <li class="category">Categories</li>
        <li><%= link_to "All", root_path %></li>
        <li><%= link_to "Fashion", tag_path(:fashion) %></li>
        <li><%= link_to "Design", tag_path(:design) %></li>
        <li><%= link_to "Tech", tag_path(:tech) %></li>
        <li><%= link_to "Art", tag_path(:art) %></li>
        <li><%= link_to "Other", tag_path(:other) %></li>
      </ul>
      <ul>
        <li class="category">Contribute</li>
        <li><%= link_to "Submit a link", about_path %></li>
      </ul>
    </div>

    <div id="main_content">
      <!-- <div id="header">
      </div> -->

      <%= yield %>
    </div>

  </body>
</html>
