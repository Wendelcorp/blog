<%= form_for @post, html: { multipart: true } do |f| %>
<% if @post.errors.any? %>
  <div id="errors">
    <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from being published.</h2>
  </div>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<p>
  <%= f.label :image %> <br>
  <%= f.file_field :image %> <br>
</p>
<p>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>
</p>
<p>
  <%= f.label :tag_list %> <br>
  <%= f.text_field :tag_list %> <br>
</p>
<p>
  <%= f.label :body %> <br>
  <%= f.text_area :body %> <br>
  <%= f.submit %>
</p>
<% end %>
